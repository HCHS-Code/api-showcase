---
import '../styles/global.css'
interface Props {
	title: string;
	activePage?: string;
}

const { title, activePage = 'cats' } = Astro.props;

const navItems = [
	{ href: '/', text: 'Cats By Tag', id: 'cats' },
	{ href: '/gallery', text: 'Cat Gallery', id: 'gallery' },
	{ href: '/github', text: 'GitHub Search', id: 'github' },
	{ href: '/nasa', text: 'NASA APOD', id: 'nasa' },
];
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="API Showcase with Astro">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-gray-50">
		<nav class="bg-white shadow-md">
			<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex justify-between h-16">
					<div class="flex">
						<div class="flex space-x-8">
							{navItems.map(item => (
								<a
									href={item.href}
									class:list={[
										'inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium',
										activePage === item.id
											? 'border-blue-500 text-gray-900'
											: 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'
									]}
								>
									{item.text}
								</a>
							))}
						</div>
					</div>
				</div>
			</div>
		</nav>

		<main class="py-8">
			<slot />
		</main>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
